<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item> <!--toolbar color, TextLayout Floating Label-->
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>

        <!-- Status bar color -->
        <item name="colorPrimaryVariant">@color/black</item> <!-- status bar color-->
<!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>&lt;!&ndash; status bar color&ndash;&gt;-->

<!--        Refers to the color of the status bar at the top of the screen.-->
        <item name="android:statusBarColor">@color/navigation_bar_color</item><!-- status bar color-->



        <!-- depricated colors -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Control colors -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item><!-- When activated/checked -->
        <item name="colorControlHighlight">@color/nav_item_ripple_color</item> <!-- Ripple effect -->

        <!-- AppBar and Toolbar theme  for Default style -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Widget.App.AppBarLayout</item>
        <item name="actionBarStyle">@style/Widget.App.ActionBar</item>
        <!-- *****End OF AppBar and Toolbar ***** -->

        <!--  NOTE:   Makes status bar semi-transparent .Content can draw behind the status bar .Ignores android:statusBarColor setting-->
<!--        <item name="android:windowTranslucentStatus" >false</item>-->


        <!-- Add this style for drawer arrow -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
<!--        <item name="homeAsUpIndicator">@drawable/ic_hemberger_menu_24</item> Note : Note working-->


        <!-- Bottom Navigation -->
         <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <!-- *****End OF Bottom Navigation ***** -->


        <!-- System Bar Configuration navigation bar color ie system navigation bar (the bar with the back, home, and recent apps buttons-->
<!--        Note :  enableEdgeToEdge() my System Bar {nav bootom bar} default color not chnge when apply on theme.-->
<!--         In That case below code not worked we have to apply via code-->
<!--        That's exactly the issue.-->
<!--        When you use enableEdgeToEdge(), it manages the system bars differently.-->
<!--        The theme's navigationBarColor is being overridden because edge-to-edge mode handles system bars differently.-->

        <item name="android:navigationBarColor">@color/navigation_bar_color</item>  <!-- Refers to the color of the navigation bar at the bottom of the screen.-->
        <item name="android:windowLightNavigationBar" tools:ignore ="NewApi" >false</item>


        <item name="android:windowTranslucentStatus" >false</item> <!-- Makes status bar semi-transparent .Content can draw behind-->
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- End Of System bar -->

        <!--   //textViewStyle for all textView-->
        <item name="android:textViewStyle">@style/regular_primary_16</item>


        <!--For Window Bg-->
        <item name="android:windowBackground">@color/bg</item>



    </style>


    <style name="Theme.TravelInsurance" parent="AppTheme" />


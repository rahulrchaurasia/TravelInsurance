<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

   >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorPrimaryDark"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="@color/toolbar_elevated_color"
            app:statusBarScrim="@color/status_bar_scrim"
            app:scrimVisibleHeightTrigger="160dp"
            app:scrimAnimationDuration="300">

            <!-- Main Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:layout_collapseMode="parallax">

                <!-- Your product image viewpager or content here -->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Toolbar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/productToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:layout_collapseMode="pin">

                <!-- Default State (Expanded) -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/defaultToolbarContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Back Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/backButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="4dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_round_back"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/white"
                        android:contentDescription="@string/content_share"
                        android:background="@drawable/circular_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <!-- Right Side Actions -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/searchButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"

                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:contentDescription="@string/content_share"
                            app:icon="@drawable/ic_round_search"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconTint="@color/white"
                            android:background="@drawable/circular_background"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/shareButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:icon="@drawable/ic_round_share"
                            android:contentDescription="@string/content_share"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconTint="@color/white"
                            android:background="@drawable/circular_background"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Collapsed State -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/collapsedToolbarContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <!-- Back Button -->
                    <ImageButton
                        android:id="@+id/collapsedBackButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_round_back"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <!-- Product Info -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/productThumb"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="8dp"
                        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
                        app:layout_constraintStart_toEndOf="@id/collapsedBackButton"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@id/productThumb"
                        app:layout_constraintEnd_toStartOf="@id/collapsedActions"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/productTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                        <TextView
                            android:id="@+id/productPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <!-- Right Side Actions -->
                    <LinearLayout
                        android:id="@+id/collapsedActions"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageButton
                            android:id="@+id/collapsedSearchButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/content_common"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_round_search"/>

                        <ImageButton
                            android:id="@+id/collapsedShareButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/content_common"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_round_share"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:contentDescription="@string/content_common"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtheader"
                android:text="Product"
                style="@style/header_textview_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/line"
                />
            <TextView
                android:text="body content"
                style="@style/regular_primary_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="body content2"
                style="@style/regular_primary_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="body content3"
                style="@style/regular_primary_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Data message"
                style="@style/regular_primary_16"

                android:layout_marginTop="400dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Data message2"
                style="@style/regular_primary_16"

                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Data message3"
                style="@style/regular_primary_16"

                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Data message3"
                style="@style/regular_primary_16"

                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Footer data1 "
                style="@style/semibold_primary_16"

                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Footer data2 "
                style="@style/semibold_primary_16"

                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>